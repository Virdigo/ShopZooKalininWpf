<Page x:Class="ShopZooKalininWpf.Pages.AddProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopZooKalininWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProduct" Background="White">

    <Grid>
        <StackPanel>
            
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35">Страница работы с продуктом</Label>
            <Label></Label>
            <Label></Label>
            <Label FontSize="18">Введите Наименование</Label>
            <TextBox x:Name="NameTextBox"  Margin="10"/>
           

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10" FontSize="18" Background="Wheat"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="10" FontSize="18" Background="White"/>
        </StackPanel>
    </Grid>
</Page>
