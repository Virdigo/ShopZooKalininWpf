<Page x:Class="ShopZooKalininWpf.Pages.AddZakaz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopZooKalininWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddZakaz" Background="White">

    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="35">Страница работы с заказом</Label>
            <Label FontSize="18">Введите дату</Label>
            <TextBox x:Name="DataTextBox"  Margin="10"/>
            <Label FontSize="18">Введите количество</Label>
            <TextBox x:Name="KaliTextBox"  Margin="10"/>
            <Label FontSize="18">Введите товар</Label>
            <TextBox x:Name="ProductTextBox"  Margin="10"/>
            <Label FontSize="18">Введите пользователя</Label>
            <TextBox x:Name="UserTextBox"  Margin="10"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10" FontSize="18" Background="Wheat"/>
        </StackPanel>
    </Grid>
</Page>
